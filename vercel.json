{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    {
      "source": "/zine/:id",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": "^((?!iPhone|iPad|iPod).)*$"
        }
      ],
      "destination": "https://tellmeastory.press",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    }
  ]
}